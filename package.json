{
  "name": "nextjs-blog",
  "version": "0.1.0",
  "author": "Zuiyu <zuiyu1818@gmail.com> (https://blog.zuiyu1818.cn)",
  "description": "The blog that build with MDX2 and Next.js",
  "keywords": [
    "MDX2",
    "nextjs"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.1.5",
    "mdx-bundler": "^9.0.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "rehype-highlight": "^5.0.2",
    "rehype-prism-plus": "^1.3.2",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "@types/node": "17.0.25",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "autoprefixer": "^10.4.4",
    "esbuild": "^0.14.37",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "typescript": "4.6.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "lint-staged": {
    "**/*.{md,mdx}": "node ./script/updateFrontmatter.js",
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{js,css,md,mdx,jsx,tsx}": "prettier --write"
  }
}
